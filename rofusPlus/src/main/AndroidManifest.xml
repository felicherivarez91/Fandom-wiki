    <application
        android:name="com.rofes.all.RofesApp"
        tools:replace="android:allowBackup"
        android:allowBackup="false"
        android:icon="@drawable/icon_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.rofes.all.ui.MainActivity"
            android:screenOrientation="sensorLandscape"
            android:configChanges="locale"
            android:label="@string/app_name"
            android:launchMode="singleInstance"
            android:windowSoftInputMode="stateHidden|adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED" />
            </intent-filter>

            <meta-data
                android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED"
                android:resource="@xml/device_filter" />
        </activity>

        <provider
            android:name="com.rofes.all.db.InferumContentProvider"
            android:authorities="com.rofes.plus"
            android:exported="false" />

        <receiver android:name="com.rofes.all.usb.UsbReceiver" >
            <intent-filter>
                <action android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED" />
                <action android:name="android.hardware.usb.action.USB_DEVICE_DETACHED" />
                <action android:name="com.rofes.plus.USB_EVENT"/>
            </intent-filter>

            <meta-data
                android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED"
                android:resource="@xml/device_filter" />
            <meta-data
                android:name="android.hardware.usb.action.USB_DEVICE_DETACHED"
                android:resource="@xml/device_filter" />
        </receiver>
        
        <receiver android:name="com.rofes.all.receivers.AlarmInitReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.TIME_SET" />
                <action android:name="android.intent.action.TIMEZONE_CHANGED" />
                <action android:name="android.intent.action.LOCALE_CHANGED" />
            </intent-filter>
        </receiver>
        <receiver android:name="com.rofes.all.receivers.MailStartReseiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="com.rofes.plus.RUN" />
            </intent-filter>
        </receiver>

        <service
            android:name="com.rofes.all.services.AlarmService"
            android:exported="false" >
            <intent-filter>
                <action android:name="ALARM_ACTION" />
            </intent-filter>
        </service>
        <service
            android:name="com.rofes.all.services.MailService"
            android:enabled="true"
            android:exported="false" />
    </application>

</manifest>
